%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
{sub_dirs, ["rel", "apps/riak"]}.

{require_otp_vsn, "R16|17"}.
{cover_enabled, true}.

{lib_dirs, ["apps/riak"]}.

{erl_opts, [debug_info, fail_on_warning]}.
{eunit_opts, [verbose]}.

{erlydtl_opts, [
    {compiler_options, [report, return, debug_info]}
]}.

{deps, [
        {rebar_lock_deps_plugin, ".*", {git, "git://github.com/seth/rebar_lock_deps_plugin.git",
            "7a5835029c42b8138325405237ea7e8516a84800"}},
        {node_package, ".*", {git, "git@github.com:basho/node_package.git", {tag, "3.1.0"}}},

        {riaknostic, ".*", {git, "git://github.com/basho/riaknostic.git", {tag, "2.1.3"}}},
        {cluster_info, ".*", {git, "git://github.com/basho/cluster_info.git", {tag, "2.0.3"}}},
        {lager_syslog, ".*", {git, "git@github.com:basho/lager_syslog.git", {tag, "2.1.3"}}},
        {riak_kv, ".*", {git, "git@github.com:basho/riak_kv.git", {branch, "riak_ts-develop"}}},
        {riak_control, ".*", {git, "git@github.com:basho/riak_control.git", {branch, "riak_ts-develop"}}},
        {riak_search, ".*", {git, "git@github.com:basho/riak_search.git", {branch, "riak_ts-develop"}}},
        {yokozuna, ".*", {git, "git://github.com/basho/yokozuna.git", {branch, "riak_ts-develop"}}},

        {riak_auth_mods, ".*", {git, "git@github.com:basho/riak_auth_mods.git", {tag, "2.1.0"}}},
        {riak_shell, ".*", {git, "git://github.com/basho/riak_shell.git", {tag, "1.4.0"}}},
        {meck, "0.8.2", {git, "git@github.com:basho/meck.git", {tag, "0.8.2"}}}
       ]}.

{plugins, [rebar_lock_deps_plugin]}.
