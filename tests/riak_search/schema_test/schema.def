{
    schema,
    [
        {version, "1.1"},
        {default_field, "value"},
        {analyzer_factory, {erlang, text_analyzers, whitespace_analyzer_factory}}
    ],
    [
        {field, [
            {name, "id"}
        ]},

        {field, [
            {name, "key"}
        ]},

        {field, [
            {name, "value"},
            {type, string},
            %% {analyzer_factory, "com.basho.search.analysis.StandardAnalyzerFactory"}
            {analyzer_factory, {erlang, text_analyzers, standard_analyzer_factory}}
        ]},

        {field, [
            {name, "whitespace"},
            {type, string},
            %% {analyzer_factory, "com.basho.search.analysis.WhitespaceAnalyzerFactory"}
            {analyzer_factory, {erlang, text_analyzers, whitespace_analyzer_factory}}
        ]},

        {field, [
            {name, "date"},
            {type, date}
        ]},

        {field, [
            {name, "int2"},
            {type, integer},
            {padding_size, 2}
        ]},

        {field, [
            {name, "int4"},
            {type, integer},
            {padding_size, 4},
            {padding_char, "0"},
            %% {analyzer_factory, "com.basho.search.analysis.IntegerAnalyzerFactory"},
            {analyzer_factory, {erlang, text_analyzers, integer_analyzer_factory}},
            {analyzer_args, ["4"]} % test passing analyzer argument
        ]},

        {field, [
            {name, "inline"},
            {inline, true}
        ]},

        {dynamic_field, [
            {name, "*_i"},
            {type, integer},
            {padding_size, 4}
        ]},

        {dynamic_field, [
            {name, "*_sd"},
            {type, string},
            %% {analyzer_factory, "com.basho.search.analysis.StandardAnalyzerFactory"}
            {analyzer_factory, {erlang, text_analyzers, standard_analyzer_factory}}
        ]},

        {dynamic_field, [
            {name, "*_sw"},
            {type, string},
            %% {analyzer_factory, "com.basho.search.analysis.WhitespaceAnalyzerFactory"}
            {analyzer_factory, {erlang, text_analyzers, whitespace_analyzer_factory}}
        ]},

        {dynamic_field, [
            {name, "*_dt"},
            {type, date}
        ]},

        {dynamic_field, [
            {name, "*_inline"},
            {inline, true}
        ]},

        {dynamic_field, [
            {name, "i_*"},
            {type, integer},
            {padding_size, 4}
        ]},

        {dynamic_field, [
            {name, "sd_*"},
            {type, string},
            %% {analyzer_factory, "com.basho.search.analysis.StandardAnalyzerFactory"}
            {analyzer_factory, {erlang, text_analyzers, standard_analyzer_factory}}
        ]},

        {dynamic_field, [
            {name, "sw_*"},
            {type, string},
            %% {analyzer_factory, "com.basho.search.analysis.WhitespaceAnalyzerFactory"}
            {analyzer_factory, {erlang, text_analyzers, whitespace_analyzer_factory}}
        ]},

        {dynamic_field, [
            {name, "dt_*"},
            {type, date}
        ]},

        {dynamic_field, [
            {name, "inline_*"},
            {inline, true}
        ]},

        %% Test ordering...
        {field, [
            {name, "order1_int"},
            {type, integer},
            {padding_size, 4}
        ]},

        {dynamic_field, [
            {name, "order1_*"},
            {type, string}
        ]},

        {dynamic_field, [
            {name, "order2_*"},
            {type, integer},
            {padding_size, 4}
        ]},

        % This field should be ignored.
        {field, [
            {name, "order2_int"},
            {type, string}
        ]}
    ]
}.
