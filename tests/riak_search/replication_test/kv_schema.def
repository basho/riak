{
    schema, 
    [
        {version, "1.1"},
        {default_field, "value"},
        {analyzer_factory, {erlang, text_analyzers, whitespace_analyzer_factory}}
    ],
    [
        {field, [
            {name, "refnum"},
            {type, integer}
        ]},

        {field, [
            {name, "testset"},
            {type, string}
        ]},

        %% Field names ending in "_num" are indexed as
        %% integers
        {dynamic_field, [
            {name, "*_num"},
            {type, integer}
        ]},

        %% Field names ending in "_dt" are indexed as
        %% dates
        {dynamic_field, [
            {name, "*_dt"},
            {type, date}
        ]},

        %% Everything else is a string
        {dynamic_field, [
            {name, "*"},
            {type, string}
        ]}
    ]
}.
